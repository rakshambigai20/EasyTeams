@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}


<body style="overflow: hidden;">
    
    <img src="~/images/background.png" alt="Background" style="position: fixed; top: 0; left: 0; width: 100%; height: 100%; object-fit: cover; z-index: -1;">

<div class="card card-custom" style="max-width:600px;">
    <div class="card-header text-white rounded-top d-flex justify-content-center" style="object-fit: cover;">
            <img src="~/images/logo-blue.png" alt="Easy Teams Full Logo" height="100px" width="auto">
    </div>
    @* <div class="card-header bg-blue text-white rounded-top">
        <h4>@ViewData["Title"]</h4>
    </div> *@
    <div class="card-body">
        <section>
            <form id="account" method="post">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary dr-shadow2">Log in</button>
                </div>
                <div>
                    <br />
               </div>
            </form>
        </section>
    </div>
</div>

</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
