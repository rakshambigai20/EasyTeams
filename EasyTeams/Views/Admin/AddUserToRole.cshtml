@{
    ViewData["Title"] = "Manage User Roles";
}

<div class="card card-custom">
    <div class="card-header bg-blue text-white rounded-top">
        <h4>@ViewData["Title"]</h4>
    </div>
    <div class="card-body">
        <hr />
        <!--Form to add user to a new role-->
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            <div class="form-group">
                <label for="UserName">User:</label>
                @Html.DropDownList("UserName", (IEnumerable<SelectListItem>)ViewData["Users"], new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label for="RoleName">Role:</label>
                @Html.DropDownList("RoleName", (IEnumerable<SelectListItem>)ViewData["Roles"], new { @class = "form-control" })
            </div>
            <hr />
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary dr-shadow2" />
            </div>
        }
    </div>
</div>
