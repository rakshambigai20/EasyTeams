@model EasyTeams.Data.Models.Domain.Staff

@{
    ViewData["Title"] = "Edit Staff";
}

<div class="card card-custom">
    <div class="card-header bg-blue text-white rounded-top">
    </div>
    <div class="card-body">
        <h4>Edit Staff</h4>
        <hr />
        <!-- Form to edit staff details -->
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="StaffId" />
                    <div class="form-group">
                        <label asp-for="FirstName" class="control-label">First Name</label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LastName" class="control-label">Last Name</label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="WorkEmail" class="control-label">Work Email</label>
                        <input asp-for="WorkEmail" class="form-control" />
                        <span asp-validation-for="WorkEmail" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PhoneNumber" class="control-label">Phone Number</label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Address" class="control-label">Address</label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary dr-shadow2" />
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="card-footer rounded-bottom">
        <a asp-controller="Staff" asp-action="GetStaff" asp-route-id="@Model.StaffId" class="btn btn-secondary dr-shadow2">Back to Staff</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
