@model IList<EasyTeams.Data.Models.Domain.Staff>

@{
    ViewData["Title"] = "Staff List";
}
<!--Renders Staff list based on logged in user-->
<div class="card card-custom">
    <div class="card-header bg-blue text-white rounded-top">
        <h4>@ViewData["Title"]</h4>
    </div>
    <div class="card-body">
        <hr />
        <p>
            <a asp-action="Create" class="btn btn-primary dr-shadow2">Register New Staff</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        First Name
                    </th>
                    <th>
                        Last Name
                    </th>
                    <th>
                        Work Email
                    </th>
                    <th>
                        Phone number
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.WorkEmail)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                        </td>
                        <td>
                            <a asp-action="GetStaff" asp-controller="staff" asp-route-id="@item.StaffId" class="btn btn-inf2">Details</a>
                            <a asp-controller="Staff" asp-action="ViewTimesheet" asp-route-id="@item.StaffId" class="btn btn-outline-secondary dr-shadow2">Timesheet</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
